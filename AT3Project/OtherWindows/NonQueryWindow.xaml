<Window x:Class="AT3Project.OtherWindows.NonQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AT3Project.OtherWindows"
        mc:Ignorable="d"
        Title="Non-Query" Height="450" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textboxNonQuery" 
                 Grid.Row="0" Grid.Column="0"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="14"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap" 
                 MaxHeight="300" MaxWidth="420" Margin="7,0,5,0" 
                 PreviewKeyDown="textboxNonQuery_PreviewKeyDown" />

        <WrapPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="buttonRunNonQuery" Content="Run" Margin="10,10,10,15" HorizontalAlignment="Stretch" Width="100" MinWidth="50" 
                    Click="buttonRunNonQuery_Click"/>
            <Button x:Name="buttonRefresh" Content="Refresh" Margin="10,10,10,15" HorizontalAlignment="Stretch" Width="100" MinWidth="50" 
                    Click="buttonRefresh_Click" />
        </WrapPanel>

        <WrapPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,5,5,5">
            <Label Content="Tables: " FontSize="20" FontWeight="Bold"/>
            <ListView x:Name="listviewTables" SelectionChanged="listviewTables_SelectionChanged" />

            <Label Content="Table Info: " FontSize="20" FontWeight="Bold"/>
            <DataGrid x:Name="datagridTableInfo" IsReadOnly="True" 
                  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  Height="Auto" Width="Auto" MaxHeight="300" Margin="5,0,10,0" AutoGeneratingColumn="datagridTableInfo_AutoGeneratingColumn" />
        </WrapPanel>

    </Grid>
</Window>
