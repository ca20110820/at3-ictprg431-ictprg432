<Window x:Class="AT3Project.OtherWindows.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AT3Project.OtherWindows"
        mc:Ignorable="d"
        Title="Query" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RichTextBox x:Name="richtxtbxQuery" Grid.Row="0" Grid.Column="1" />

        <WrapPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="buttonRunQuery" Content="Run" Margin="10,0,10,0" HorizontalAlignment="Stretch" Width="100" MinWidth="50"/>
        </WrapPanel>

        <DataGrid x:Name="datagridQuery" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" IsReadOnly="True" 
                  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="225">
        </DataGrid>
    </Grid>
</Window>
